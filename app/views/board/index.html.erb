
<div class="row justify-content-end">
<% unless user_signed_in? %>
    <%= link_to "로그인", "/sign_in", class: "btn btn-primary" %>&nbsp
    <%= link_to "회원가입", "/sign_up", class: "btn btn-info" %>
<% else %>
    <%= link_to "새글쓰기", "/board/new", class: "btn btn-primary" %>&nbsp
    <%= link_to "내가 쓴 글", "/user/#{current_user.id}", class: "btn btn-info" %>&nbsp
    <%= link_to "로그아웃", "/logout", class: "btn btn-warning" %>
<% end %>
</div>

<br/>
<br/>

<%= render 'article' %>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">글 번호</th>
      <th scope="col">글 제목</th>
      <th scope="col">작성자</th>
      <th scope="col">작성일자</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><a href="/board/<%= post.id %>"><%= post.title %></a></td>
      <td><%= post.user.user_name %></td>
      <td><%= post.created_at.to_date %></td>
    </tr>
    <% end %>
  </tbody>
</table>
